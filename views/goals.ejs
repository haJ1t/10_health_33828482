<%- include('partials/header') %>
<%- include('partials/nav') %>

<main class="main-content">
    <section class="goals-section">
        <div class="page-header">
            <h1><i class="fas fa-bullseye"></i> My Goals</h1>
            <div class="header-actions">
                <a href="<%= basePath %>/goals/add" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Goal
                </a>
            </div>
        </div>
        
        <% if (error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <%= error %>
            </div>
        <% } %>
        
        <% if (goals && goals.length > 0) { %>
            <div class="goals-grid">
                <% goals.forEach(goal => { 
                    const progress = goal.target_value ? ((goal.current_value / goal.target_value) * 100).toFixed(1) : 0;
                    const isCompleted = goal.status === 'completed';
                    const isAbandoned = goal.status === 'abandoned';
                %>
                    <div class="goal-card <%= goal.status %>">
                        <div class="goal-header">
                            <span class="goal-type-badge badge-<%= goal.goal_type %>">
                                <%= goal.goal_type.replace('_', ' ') %>
                            </span>
                            <span class="goal-status">
                                <% if (isCompleted) { %>
                                    <i class="fas fa-check-circle"></i> Completed
                                <% } else if (isAbandoned) { %>
                                    <i class="fas fa-times-circle"></i> Abandoned
                                <% } else { %>
                                    <i class="fas fa-clock"></i> Active
                                <% } %>
                            </span>
                        </div>
                        
                        <div class="goal-body">
                            <h3><%= goal.goal_description %></h3>
                            
                            <% if (goal.target_value) { %>
                                <div class="goal-progress">
                                    <div class="progress-info">
                                        <span>
                                            <%= goal.current_value %> / <%= goal.target_value %> 
                                            <%= goal.unit || '' %>
                                        </span>
                                        <span><%= progress %>%</span>
                                    </div>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: <%= Math.min(progress, 100) %>%"></div>
                                    </div>
                                </div>
                                
                                <% if (!isCompleted && !isAbandoned) { %>
                                    <form action="<%= basePath %>/goals/update-progress/<%= goal.id %>" method="POST" class="progress-form">
                                        <input 
                                            type="number" 
                                            name="current_value" 
                                            placeholder="Update progress"
                                            step="0.1"
                                            min="0"
                                            class="form-control form-control-sm"
                                        >
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="fas fa-arrow-up"></i> Update
                                        </button>
                                    </form>
                                <% } %>
                            <% } %>
                            
                            <% if (goal.target_date) { %>
                                <p class="goal-date">
                                    <i class="fas fa-calendar"></i>
                                    Target: <%= new Date(goal.target_date).toLocaleDateString() %>
                                </p>
                            <% } %>
                        </div>
                        
                        <div class="goal-actions">
                            <% if (!isCompleted && !isAbandoned) { %>
                                <form action="<%= basePath %>/goals/update-status/<%= goal.id %>" method="POST" style="display: inline;">
                                    <input type="hidden" name="status" value="completed">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="fas fa-check"></i> Complete
                                    </button>
                                </form>
                                
                                <form action="<%= basePath %>/goals/update-status/<%= goal.id %>" method="POST" style="display: inline;">
                                    <input type="hidden" name="status" value="abandoned">
                                    <button type="submit" class="btn btn-sm btn-warning">
                                        <i class="fas fa-ban"></i> Abandon
                                    </button>
                                </form>
                            <% } %>
                            
                            <form action="<%= basePath %>/goals/delete/<%= goal.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this goal?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-bullseye empty-icon"></i>
                <h2>No goals set yet</h2>
                <p>Set your first fitness goal and start tracking your progress!</p>
                <a href="<%= basePath %>/goals/add" class="btn btn-primary btn-large">
                    <i class="fas fa-plus"></i> Set Your First Goal
                </a>
            </div>
        <% } %>
    </section>
</main>

<%- include('partials/footer') %>
